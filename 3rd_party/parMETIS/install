#!/bin/bash
set -e

VER=4.0.3

if [ "$1" == "clean" ]; then
  rm -rf v$VER.tar.gz parMETIS bin lib include 2>/dev/null
  exit 0
fi

if [ -f ./lib/libparmetis.a ]; then
  exit 0
fi

new_link=1
if [[ ${new_link} -eq 1 ]]; then
  wget_url="https://launchpad.net/ubuntu/+archive/primary/+sourcefiles/parmetis/4.0.3-4/parmetis_4.0.3.orig.tar.gz"
else
  wget_url="http://glaros.dtc.umn.edu/gkhome/fetch/sw/parmetis/parmetis-$VER.tar.gz"
fi

wget --no-check-certificate -O v$VER.tar.gz ${wget_url}
rm -rf parMETIS 2>/dev/null
mkdir parMETIS
tar -zxvf v$VER.tar.gz -C ./parMETIS --strip-components=1
cd parMETIS

set -x
patch metis/include/metis.h < ../p_idx64
patch Makefile < ../p_makefile
make config cc=`which $CC` prefix=`pwd`/..
set +x
mkdir -p ../include
make install
find . -name "libmetis.a" -exec cp {} ../lib \;
cp ./metis/include/metis.h ../include
cp ./libparmetis/defs.h ../include
